<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@color/white">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:shadowColor="#202020"
            android:text="Nhập tên ATM"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    <EditText
            android:id="@+id/account_tools_find_atm_et_atm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:hint="Vd: Vietcombank, ..."
            android:ems="10" android:backgroundTint="@color/black" android:textColor="@color/black"/>
</LinearLayout>